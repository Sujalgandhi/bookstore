<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookStore</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      body {
        font-family: Arial, sans-serif;
      }
      header {
        background-color: #101010;
        color: white;
        padding: 1rem;
      }
      header .logo h1 {
        margin: 0;
      }
      nav ul {
        list-style: none;
        padding: 0;
        display: flex;
        gap: 1rem;
      }
      nav ul li a {
        color: white;
        text-decoration: none;
      }
      .main-content {
        text-align: center;
        margin: 2rem 0;
      }
      .search-bar {
        display: flex;
        justify-content: center;
        margin-bottom: 2rem;
      }
      .search-bar input {
        width: 300px;
        padding: 0.5rem;
      }
      .books-section {
        background-color: #f8f9fa;
        padding: 2rem;
      }
      .book {
        background-color: white;
        padding: 1rem;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 1.5rem;
      }
      .book img {
        max-width: 100%;
        border-radius: 8px;
      }
      .book .data {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }
      .hidden {
        display: none;
      }
      .visible {
        display: block;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <div class="logo">
            <h1>BookStore</h1>
          </div>
          <nav>
            <ul class="d-flex">
              <li><a href="/" class="add">Add Data</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <main>
      <div class="main-content">
        <h2>
          NodeJs Book Store
        </h2>
        <div class="search-bar">
          <input type="text" placeholder="Search" />
          <button class="btn btn-primary ms-2">Search</button>
        </div>
        <div class="books-section">
          <div class="container">
            <div class="row">
              <% data.map((val) => { %>
              <div class="col-md-6">
                <div class="book">
                  <div class="row g-0">
                    <div class="col-7 p-3 data">
                      <h3 class="pb-2 fw-bolder"><%= val.name %></h3>
                      <p class="pb-1 fw-bold">Author: <%= val.author %></p>
                      <p class="pb-2 fw-bold">Price: $<%= val.price %></p>
                      <div class="d-flex justify-content-between mt-3">
                        <button class="btn details" onclick="dscSlide(this)">About</button>
                        <a href="/delete?id=<%= val._id %>" class="btn delet">Delet</a>
                      </div>
                      <div class="d-flex justify-content-between mt-3">
                        <button class="btn buy">Buy</button>
                        <a href="/edit?id=<%= val._id %>" class="btn edit">Edit</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </main>
    <script>
      function dscSlide(button) {
        const dsc = button.closest('.book').querySelector('#dsc');
        dsc.classList.toggle('hidden');
        dsc.classList.toggle('visible');
      }
    </script>
  </body>
</html>
